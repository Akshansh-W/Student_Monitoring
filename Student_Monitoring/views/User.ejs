        }

        .activity-item:hover {
            background: #e9ecef;
            border-left-color: #2a5298;
            transform: translateX(5px);
        }

        .activity-icon {
            width: 50px;
            height: 50px;
            background: linear-gradient(135deg, #2a5298 0%, #1e3c72 100%);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
        }

        .activity-content {
            flex: 1;
        }

        .activity-title {
            font-size: 16px;
            color: #333;
            font-weight: 600;
            margin-bottom: 5px;
        }

        .activity-description {
            font-size: 14px;
            color: #666;
            margin-bottom: 5px;
        }

        .activity-time {
            font-size: 12px;
            color: #999;
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .activity-badge {
            padding: 5px 12px;
            background: #27ae60;
            color: white;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
            flex-shrink: 0;
        }

        .activity-badge.pending {
            background: #f39c12;
        }

        .activity-badge.completed {
            background: #27ae60;
        }

        .activity-badge.upcoming {
            background: #3498db;
        }

        /* Responsive */
        @media (max-width: 1024px) {
            .sidebar {
                width: 80px;
            }

            .sidebar-header {
                padding: 0 15px 20px;
            }

            .logo-text,
            .student-mini-profile,
            .nav-link span {
                display: none;
            }

            .nav-link {
                justify-content: center;
                padding: 15px;
            }

            .logo {
                justify-content: center;
            }

            .main-content {
                margin-left: 80px;
            }
        }

        @media (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%);
            }

            .main-content {
                margin-left: 0;
                padding: 20px;
            }

            .top-bar {
                flex-direction: column;
                gap: 20px;
                align-items: flex-start;
            }

            .student-header {
                flex-direction: column;
                text-align: center;
            }

            .student-details {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
